{
  "rootDir": ".",
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "testMatch": [
    "./**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "./src/**/*.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 26,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
